<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <div id="ovunque_search_bar" class="o_ovunque_search_container">
        <div class="input-group">
            <input 
                type="text" 
                id="ovunque_search_input" 
                class="form-control" 
                placeholder="Ask anything... e.g., 'Show unpaid invoices from Rossi'"
                autocomplete="off"/>
            <button 
                class="btn btn-primary" 
                id="ovunque_search_btn" 
                type="button">
                <i class="fa fa-search"></i> Search
            </button>
        </div>
        <div id="ovunque_search_results" class="o_ovunque_results mt-3" style="display:none;">
            <div class="alert alert-info">
                <strong id="ovunque_result_title"></strong>
                <div id="ovunque_result_content" class="mt-2"></div>
            </div>
        </div>
        <div id="ovunque_search_loading" class="mt-2" style="display:none;">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
</templates>
