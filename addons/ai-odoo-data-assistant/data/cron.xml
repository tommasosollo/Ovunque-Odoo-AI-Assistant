<odoo>
    <record id="cron_ai_data_quality" model="ir.cron">
        <field name="name">AI Data Quality Report</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.env['ai.data.cleaner']._call_llm("Generate a data quality report for Odoo instance")</field>
        <field name="interval_type">days</field>
        <field name="interval_number">7</field>
    </record>
</odoo>
