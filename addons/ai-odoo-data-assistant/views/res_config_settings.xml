<odoo>
    <record id="res_config_settings_view_form_ai" model="ir.ui.view">
        <field name="name">res.config.settings.ai.assistant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="AI Assistant Settings">
                    <h2>AI Data Assistant</h2>
                    <div class="row mt16">
                        <div class="col-6">
                            <field name="ai_api_key"/>
                            <field name="ai_model_name"/>
                            <field name="ai_redundancy_level"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
